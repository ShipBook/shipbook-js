{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/react-native" },
    { "path": "./packages/browser" },
    { "path": "./packages/node" }
  ],
  "exclude": ["node_modules", "**/node_modules", "**/lib"]
}
